<table summary ="information about following users">

  <tr>
    <td class="leftcol">
      <h1><%= @title %></h1>
      <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
        <% end %>
      </ul>
      <%= will_paginate @users %>


    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong><%= link_to user_path(@user), @user %><br />
      <strong>Thoughts</strong><%= @user.thoughts.count %>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
      <% @users.each do |user| %>
      <%= link_to gravatar_for(user, :size => 30), user %>
      <% end %>
      <% end %>
    </td>
  </tr>
</table>