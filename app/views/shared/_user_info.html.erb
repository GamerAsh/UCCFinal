<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_name">
      <% current_user.name %>
    </span>
    <span class="thoughts">
      <%= pluralize(current_user.thoughts.count, "thought") %>
    </span>
  </a>
</div>